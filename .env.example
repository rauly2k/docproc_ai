# Anima X Environment Configuration
# Copy this file to .env and fill in your actual values

# Application
APP_NAME=Anima X
ENVIRONMENT=development
DEBUG=true

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/animax_dev

# Google Cloud Platform
GCP_PROJECT_ID=animax-mvp-prod
GCP_REGION=europe-west1

# Google Cloud Storage
GCS_UPLOADS_BUCKET=animax-uploads-dev
GCS_PROCESSED_BUCKET=animax-processed-dev
GCS_TEMP_BUCKET=animax-temp-dev

# Firebase
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-credentials.json
FIREBASE_PROJECT_ID=your-firebase-project-id

# Vertex AI
VERTEX_AI_LOCATION=us-central1

# Document AI
DOCUMENTAI_LOCATION=eu
DOCUMENTAI_INVOICE_PROCESSOR_ID=your-invoice-processor-id
DOCUMENTAI_OCR_PROCESSOR_ID=your-ocr-processor-id
DOCUMENTAI_ID_PROCESSOR_ID=your-id-processor-id

# CORS (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# File Upload
MAX_UPLOAD_SIZE_MB=10
